<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E7E9E9">

    <ImageView
        android:id="@+id/songList_album_group_expand_indicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/expand_indicator"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/songList_album_group_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="创建的歌单(1)"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/songList_album_group_setting"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:src="@drawable/expand_setting_btn"/>
</LinearLayout>